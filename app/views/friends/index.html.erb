<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th style="text-align: center">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <!-- <%# = #render friend %> -->
    <% if friend.user == current_user %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td style="text-align: center"><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-info" %>
          &nbsp;&nbsp;
          <%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>

        <% #= #link_to "Show this friend", friend %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-outline-primary" %>
